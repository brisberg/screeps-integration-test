{
  "compilerOptions": {
    "module": "CommonJs",
    "lib": [
      "ES2020"
    ],
    "target": "ES2020",
    "moduleResolution": "Node",
    "outDir": "lib",
    "baseUrl": "src/",
    "sourceMap": true,
    "declaration": true,
    "strict": true,
    "experimentalDecorators": false,
    "noImplicitReturns": true,
    "esModuleInterop": true,
    "allowUnreachableCode": false
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
